# https://editorconfig.org/

root = true

[*]
charset = utf-8 ; no BOM
end_of_line = crlf
indent_size = 4
indent_style = tab
insert_final_newline = true

[.*]
trim_trailing_whitespace = true

[*.md]
indent_size = 2
trim_trailing_whitespace = false

[*.resx]
indent_size = 2

[*.{yaml,yml}]
indent_size = 2
indent_style = space
